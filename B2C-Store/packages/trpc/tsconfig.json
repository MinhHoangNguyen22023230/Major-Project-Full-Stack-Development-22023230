{
    "compilerOptions": {
        "module": "NodeNext",
        "strict": true,
        "target": "ES2017",
        "baseUrl": ".",
        "moduleResolution": "nodenext",
        "esModuleInterop": true, // Added for compatibility
        "skipLibCheck": true, // Added to avoid type-checking issues
        "outDir": "dist"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}