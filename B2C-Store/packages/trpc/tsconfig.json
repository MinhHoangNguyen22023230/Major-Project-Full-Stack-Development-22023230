{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2017",
        "baseUrl": ".",
        "moduleResolution": "nodenext",
        "skipLibCheck": true, // Added to avoid type-checking issues
        "outDir": "dist",
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}